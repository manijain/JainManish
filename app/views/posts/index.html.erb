<div class="content devroye", id="home_page_contents">
  <!-- Start: slider -->
  <div class="item">
    <div class="hero-unit">
      <div class="page-header">
        <h2><i class="icon-briefcase"></i> My Blog</h2>
      </div>
      <h1>Listing posts</h1>
      <%= link_to 'New post', new_post_path if current_user.try(:is_admin) == true %>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
    <th></th>
  </tr>
 
<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.text %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) if current_user.try(:is_admin) == true %></td>
    <td><%= link_to 'Destroy', post_path(post),
                    method: :delete, data: { confirm: 'Are you sure?' } if current_user.try(:is_admin) == true %></td>
  </tr>
<% end %>
</table>
    </div>
  </div>
</div>