<div class="content devroye", id="home_page_contents">
  <!-- Start: slider -->
  <div class="item">
    <div class="hero-unit">
      <div class="page-header">
        <h2><i class="icon-briefcase"></i> My Blog</h2>
      </div>
      <h1>Listing posts</h1>
      <%= link_to 'New post', new_post_path if current_user.try(:is_admin) == true %>
 
      <table class= "table table-condensed">
        <tr>
          <th width="30%">Title</th>
          <th width="30%">Text</th>
          <th></th>
        </tr>
       
        <% @posts.each do |post| %>
          <tr>
            <td width="30%"><%= post.title %></td>
            <td width="30%"><%= post.text %></td>
            <td><%= link_to 'Show', post %> |
            <% if current_user.try(:is_admin) == true %>
             <%= link_to 'Edit', edit_post_path(post) %> | <%= link_to 'Destroy', post_path(post), method: :delete, data: { confirm: 'Are you sure?' }  %>
            <% end %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>